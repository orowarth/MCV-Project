@using MCBADataLibrary.Admin.Communication
@model LoginInput
@{
    ViewData["Title"] = "Login";
}

<h1 class="display-4">Login</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="form-group my-2">
                <label asp-for="LoginID" class="control-label">Login ID</label>
                <input asp-for="LoginID" class="form-control" />
                <span asp-validation-for="LoginID" class="text-danger" />
            </div>
            <div class="form-group my-2">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>
            @Html.ValidationMessage("LoginFailure", new { @class = "text-danger" })
            <div class="form-group my-2">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}