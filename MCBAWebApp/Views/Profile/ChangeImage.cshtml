@model ImageViewModel
@{
    ViewData["Title"] = "Change Image";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeImage" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" accept="image/*" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            @if (Model.CurrentImage is not null)
            {
                <div class="form-group my-2">
                    <label class="control-label my-2">Current Image</label> <br />
                    <img src="data:image;base64, @(Model.CurrentImage.Image)" width="250" class="rounded" alt="" />
                </div>
            }
            <div class="form-group my-2">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
        <a asp-action="DeleteImage" class="btn btn-outline-danger my-2">Delete Profile Picture</a>
        <br />
        <a asp-action="Index" class="btn btn-outline-danger my-2">Cancel</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
