@using MCBADataLibrary.Models
@model Customer
@{
    ViewData["Title"] = "My Profile";
}

<div class="row">
    <div class="col-md-4">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <div class="form-group my-2">
                <label asp-for="TFN" class="control-label"></label>
                <input asp-for="TFN" class="form-control" readonly />
            </div>
            <div class="form-group my-2">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" readonly />
            </div>
            <div class="form-group my-2">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" readonly />
            </div>
            <div class="form-group my-2">
                <label asp-for="State" class="control-label"></label>
                <input asp-for="State" class="form-control" readonly />
            </div>
            <div class="form-group my-2">
                <label asp-for="PostCode" class="control-label"></label>
                <input asp-for="PostCode" class="form-control" readonly />
            </div>
            <div class="form-group my-2">
                <label asp-for="Mobile" class="control-label"></label>
                <input asp-for="Mobile" class="form-control" readonly />
            </div>
        </form>
        <a asp-action="EditProfile" class="btn btn-primary my-2">Edit Profile</a>
        <br />
        <a asp-action="ChangePassword" class="btn btn-outline-primary my-2">Change Password</a>
        <br />
        <a asp-action="ChangeImage" class="btn btn-outline-primary my-2">Change Profile Picture</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

