@using MCBADataLibrary.Enums
@model BillViewModel

@{
    ViewData["Title"] = "New Bill";
}

    <div class="row">
        <div class="col-md-4">
            <form asp-action="NewBill">
                <div class="form-group my-2">
                    <label class="control-label">Account:</label>
                    <select asp-for="SelectedAccount" asp-items="Model.Accounts" class="form-control"></select>
                </div>
                <div class="form-group my-2">
                    <label class="control-label">Payee:</label>
                    <select asp-for="SelectedPayee" asp-items="Model.Payees" class="form-control"></select>
                </div>
                <label asp-for="Amount" class="control-label"></label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input asp-for="Amount" class="form-control" />
                </div>
                <span asp-validation-for="Amount" class="text-danger"></span>
                <div class="form-group my-2">
                    <label asp-for="ScheduleTime" class="control-label">Schedule Time:</label> <br />
                    @Html.EditorFor(m => m.ScheduleTime, new { @class = "date form-control" })
                    <span asp-validation-for="ScheduleTime" class="text-danger"></span>
                </div>
                <div class="form-group my-2">
                    <label asp-for="Period" class="control-label"></label>
                    <select asp-for="Period" asp-items="Html.GetEnumSelectList<BillPeriod>()" class="form-control"></select>
                </div>
                <input type="submit" value="Submit" class="btn btn-primary">
            </form>
            <a asp-action="Index" class="btn btn-danger my-2">Cancel</a>
        </div>
    </div>